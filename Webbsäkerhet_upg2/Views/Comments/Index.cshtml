@model IEnumerable<Webbsäkerhet_upg2.Models.Comment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach(var comment in Model.OrderBy(c => c.TimeStamp))
{
    <div class="comment">
        <p class="content">
            @Html.Raw(comment.Content);
        </p>
        <p class="timestamp">
            @comment.TimeStamp
        </p>
    </div>
}

